<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roboto_calendar_white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment">

    <com.example.kalender.CalendarView
        android:id="@+id/robotoCalendarPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.kalender.CalendarView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView3"
        android:layout_below="@+id/robotoCalendarPicker"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_alignParentBottom="true" />


    <ImageButton
    android:layout_width="30sp"
    android:layout_height="30sp"
    android:background="@drawable/roundbuttongreen"
    android:src="@drawable/ic_today_white_24dp"
        android:elevation="10dp"
        android:id="@+id/idag"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/listView3"
        android:layout_toLeftOf="@+id/tilfoj"
        android:layout_toStartOf="@+id/tilfoj"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@drawable/roundblue2button"
        android:src="@drawable/ic_add_white_24dp"
        android:elevation="10dp"
        android:enabled="false"
        android:id="@+id/tilfoj"
        android:layout_gravity="bottom"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/idag"
        android:layout_alignRight="@+id/listView3"
        android:layout_alignEnd="@+id/listView3"
        android:layout_marginBottom="0dp"
        android:visibility="invisible" />


</RelativeLayout>
