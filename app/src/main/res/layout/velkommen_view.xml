<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roboto_calendar_white"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:id="@+id/velkommenview"
        android:layout_height="match_parent"
        android:background="@color/roboto_calendar_white"
        android:layout_above="@+id/imageView3">
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/roundringyellowbutton"
        android:src="@drawable/ic_phone_black_48dp"
        android:id="@+id/kontakt"
        android:elevation="10dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/roundringgreenbutton"
        android:src="@drawable/ic_message_black_48dp"
        android:elevation="10dp"
        android:id="@+id/beskeder"

        android:layout_alignTop="@+id/opgaver"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/roundringredbutton"
        android:src="@drawable/ic_assignment_black_48dp"
        android:elevation="10dp"
        android:id="@+id/opgaver"

        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/roundringbluebutton"
        android:src="@drawable/ic_today_black_48dp"
        android:elevation="10dp"
        android:id="@+id/kalender"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/imageView3"
        android:background="@drawable/loginbilled"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>